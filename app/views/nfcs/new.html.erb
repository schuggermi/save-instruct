<div class="container-fluid">
  <h1 class="text-center mb-5">Add NFC Chip to <%= @task.name %></h1>

  <%= link_to 'Cancel', task_path(@task), class: "button button-purple" %>

  <div class="card p-2 mt-5" data-controller="nfc" data-nfc-task-value="<%= @task.id %>">
    <p data-nfc-target="scanMessage">...</p>

    <button class="button button-orange" data-nfc-target="scan" data-action="click->nfc#scanNewNfc">Scan NFC</button>
    <button class="button button-orange d-none" data-nfc-target="write" data-action="click->nfc#writeNewNfc">Write NFC</button>

    <div>
      <%= simple_form_for([@task, @nfc], data: {nfc_target: "nfcForm", turbo: false}) do |f| %>
        <%= f.hidden_field :url %>
        <%= f.input :serial_number %>
        <%= f.input :position %>
        <%= f.submit class: "button button-purple w-100" %>
      <% end %>
    </div>
  </div>
</div>
