<div class="login-container d-flex justify-content-center align-content-between flex-wrap">

  <div class="container d-flex flex-column align-items-between">
    <h1>
      <%= image_tag "honeyformoney.svg", class: "full-logo mt-4", alt: "Chemical Company logo." %>
    </h1>

    <div class="text-center mb-5">
      <%= image_tag 'save-instruct-logo-powered-by.svg', width: 150 %>
    </div>

    <h2>Welcome</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
      <div class="form-inputs form-login">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button button-orange" %>
      </div>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "button button-outline-purple" %><br />
    <% end %>
  </div>
</div>
