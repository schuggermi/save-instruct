
  <h1>
    <%= image_tag "chemical-company-logo-full-black-orange.svg", class: "full-logo", alt: "Chemical Company logo." %>
  </h1>

<h2>Welcome</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
  <div class="form-inputs form-login">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "button button-orange" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link" %><br />
<% end %>

<div class="powered-by">
  <p>Powered by</p>
  <%= image_tag "Save-Instruct.png" %>
</div>

